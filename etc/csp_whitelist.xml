<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="maxpay-script" type="host">https://hpp.maxpay.com/</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="maxpay-style" type="host">https://hpp.maxpay.com/</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="maxpay-frame" type="host">https://hpp.maxpay.com/</value>
                <value id="data " type="host">'self' data:</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
